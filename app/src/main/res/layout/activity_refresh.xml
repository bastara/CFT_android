<?xml version="1.0" encoding="utf-8"?>

<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="@string/refresh" />

    <RadioButton
        android:id="@+id/radio15min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:onClick="onRadioClick"
        android:text="@string/refreshTime_15" />

    <RadioButton
        android:id="@+id/radio60min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRadioClick"
        android:text="@string/refreshTime_60" />

    <RadioButton
        android:id="@+id/radio6hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRadioClick"
        android:text="@string/refreshTime_6h" />

    <RadioButton
        android:id="@+id/radio24hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRadioClick"
        android:text="@string/refreshTime_24h" />
</RadioGroup>